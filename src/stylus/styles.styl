// --- imports

@import "kouto-swiss"

// --- resets

meyer-reset()
box-sizing-reset()

// --- fonts

// TODO : check if all sizes are really used
ExtraLight = 100
font-face( "FiraSans", "fonts/firasans/FiraSans-ExtraLight", ExtraLight, formats: eot woff )
Light = 200
font-face( "FiraSans", "fonts/firasans/FiraSans-Light", Light, formats: eot woff )
// normal
font-face( "FiraSans", "fonts/firasans/FiraSans-Book", formats: eot woff )
Medium = 400
font-face( "FiraSans", "fonts/firasans/FiraSans-Medium", Medium, formats: eot woff )
SemiBold = 500
font-face( "FiraSans", "fonts/firasans/FiraSans-SemiBold", SemiBold, formats: eot woff )
Bold = 600
font-face( "FiraSans", "fonts/firasans/FiraSans-Bold", Bold, formats: eot woff )
FiraSans = "FiraSans", "Fira Sans", "FiraSansOT", font-stack( "Helvetica" )
font-face( "WebHostingHub", "fonts/webhostinghub/webhostinghub-glyphs-webfont", formats: eot ttf svg )
Glyphs = "WebHostingHub", "WebHostingHub-Glyphs"

// --- mixins

geometricBox( bcgColor, topAngle, bottomAngle, zIndex, verticalShift = -10px, height = 50px )
    position relative
    background bcgColor
    z-index zIndex
    &:before, &:after
        content ""
        position absolute
        display block
        width 150%
        height height
        background bcgColor
        z-index -1
        backface-visibility hidden
    &:before
        top verticalShift
        left -50px
        transform rotate( topAngle )
        box-shadow 0 -5px 5px rgba( black, 0.25 )
    &:after
        bottom verticalShift
        left -50px
        transform rotate( bottomAngle )
        box-shadow 0 5px 5px rgba( black, 0.25 )

diamond( innerSize, radius = 0 )
    outerSize = math( innerSize * innerSize * 2, "sqrt" )
    position relative
    width innerSize
    height innerSize
    box-sizing border-box
    &:before
        position absolute
        display block
        content ""
        width outerSize
        height outerSize
        top ( outerSize * -1 / 2 ) + ( innerSize / 2 )
        left ( outerSize * -1 / 2 ) + ( innerSize / 2 )
        background white
        box-shadow 0 0 10px rgba( black, 0.5 )
        z-index -1
        transform rotate( -45deg )
        border-radius radius

// --- vars

cLink = #440293
cVisitedLink = #440293
cHoverColor = #7303f7

cIntroduction = #c8e403
cPresentation = tint( #036dc2, 5% )
cSkills = #f27e03
cInvite = #02a976
cContact = #2e9a02

cFooterLink = #93cefe

bkHorizontalPhones = media-query( screen, min-width 480px )
bkVerticalTablets = media-query( screen, min-width 640px )
bkLargerVerticalTablets = media-query( screen, min-width 768px )
bkSmallDesktopScreens = media-query( screen, min-width 960px )
bkMediumDesktopScreens = media-query( screen, min-width 1200px )
bkBigDesktopScreens = media-query( screen, min-width 1600px )

// --- styles

*
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%

html
    background-color gray
    retina-image( "images/grey_wash_wall.png", 350px 259px, "_@2X" )

body
    font normal 62.5%/1.25 FiraSans

#holder
    position relative
    overflow hidden

header
    position relative
    background black
    padding 1px 0
    box-shadow 0 0 20px rgba( black, 0.5 )
    z-index 20
    h1
        position relative
        width 290px
        margin 10px auto 12px
        color white
        span.one
            position absolute
            top .05em
            left -1.35em
            display inline-block
            font Light 2.2em/1 FiraSans
            text-transform uppercase
            transform rotate( -90deg )
            transform-origin top right
        em.two
            position absolute
            top 0
            right 0
            font SemiBold 3.5em/1 FiraSans
            text-transform uppercase
            display inline-block
        span.three
            display inline-block
            font Light 1.8em FiraSans
            margin 1.7em .2em 0 0
            transform rotate( 180deg )
        em.four
            position absolute
            top 1.05em
            right 0
            font SemiBold 2.5em FiraSans
    &:after
        content ""
        display block
        position absolute
        left 50%
        margin-left -20px
        triangle( down, 20px, black )
        z-index 10

[id="figure-holder"]
    padding 8px 0
    figure
        position relative
        display block
        width 100px
        height 100px
        padding 5px
        margin 0 auto
        background white
        border-radius 5px
        box-shadow 0 0 10px rgba( black, 0.5 )
        transform rotate( -3deg )
        backface-visibility hidden
        img
            max-width 100%
            border-radius 3px
        figcaption
            display none

section
    padding 1px 0
    div
        position relative
        margin 20px 20px 30px
        &:before
            content ""
            display block
            font normal 80px/1 Glyphs
            opacity .1
            position absolute
            bottom 10px
            left 0
        p
            font Light 1.4em/1.35 FiraSans
            margin 0.35em auto 0.7em
            strong
                font-weight Bold
            em
                font-weight SemiBold
    &[id="introduction"]
        geometricBox( cIntroduction, 2deg, 1deg, 10 )
        div:before
            content: ""
    &[id="presentation"]
        geometricBox( cPresentation, -1deg, 3deg, 20 )
        div:before
            content: ""
    &[id="skills"]
        geometricBox( cSkills, 1deg, -2deg, 30 )
        div:before
            content: ""
    &[id="invite"]
        geometricBox( cInvite, -1deg, 1deg, 40 )
        div:before
            content: ""
    &[id="socials"]
        padding 40px 0 20px
        ul
            margin 20px 10px 0
            padding 1px 0
            text-align center
            li
                display inline-block
                margin 0 25px 15px
                a
                    display inline-block
                    text-decoration none
                    diamond( 30px, 5px )
                    &:after
                        font normal 25px/30px Glyphs
                        color gray
                    span
                        display none
                    &[id="cv"]:after
                        content ""
                    &[id="twitter"]:after
                        content ""
                    &[id="website"]:after
                        content ""
                    &[id="github"]
                        margin 0 auto 0 60px
                        &:after
                            content ""
                    &[id="dribbble"]
                        margin 0 60px 0 auto
                        &:after
                            content ""
                    &[id="linkedin"]:after
                        content ""
                    &[id="viadeo"]:after
                        content ""
    &[id="contact"]
        geometricBox( cContact, 2deg, -1deg, 40 )
        margin 30px auto 0
        &:after
            display none
        div:before
            content ""
        a
            color cLink
            text-decoration none
            transition color .25s ease-in-out
            &:visited
            &:active
                color cVisitedLink
            &:hover
                color cHoverColor

footer
    position relative
    background black
    padding 1px 0
    box-shadow 0 0 20px rgba( black, 0.5 )
    z-index 80
    p
        margin 20px 20px 18px
        font Light 1.2em FiraSans
        color white
        clear fix
        a
            float right
            color cFooterLink
            text-decoration none
            transition color .25s ease-in-out
            &:hover
                color tint( cFooterLink, 33% )
    &:before
        content ""
        display block
        position absolute
        width 0
        height 0
        left 50%
        top -40px
        margin-left -20px
        border 20px solid transparent
        border-bottom-color black
        z-index 10

[id="behind"]
    display none

@media bkHorizontalPhones
    section div:before
        font normal 60px/1 Glyphs
    section[id="socials"] ul
        margin 20px 70px 0

@media bkVerticalTablets
    header
        h1
            position relative
            width 510px
            margin 17px auto 22px
            color white
            span.one
                top .075em
                left -1.65em
                font Light 3.6em FiraSans
            em.two
                top 0
                right 0
                font normal 6.2em/1 FiraSans
            span.three
                font Light 3.2em FiraSans
                margin 1.7em .2em 0 0
            em.four
                top 1.05em
                right 0
                font SemiBold 4.6em FiraSans
    [id="figure-holder"]
        padding 10px 0
        figure
            width 150px
            height 150px
    section
        div
            min-height 250px
            padding 10px 0 10px 210px
            &:before
                bottom 20px
                font normal 180px/1 Glyphs
            p
                font Light 1.6em/1.35 FiraSans
        &[id="presentation"]
        &[id="invite"]
            div
                padding 10px 210px 10px 0
                &:before
                    font normal 180px/1 Glyphs
                    left auto
                    right 20px
        &[id="socials"]
            min-height auto
            ul
                margin 30px 20px 10px
                li
                    margin 0 40px 15px
                    a
                        diamond( 50px, 5px )
                        &:after
                            font normal 40px/50px Glyphs
                            color: gray
                        &[id="github"]
                            margin 0
                        &[id="dribbble"]
                            margin 0 67px 0 0
                        &[id="linkedin"]
                            margin 0 0 0 67px
    footer p
        margin 16px 20px 10px
        font ExtraLight 1.6em FiraSans

@media bkLargerVerticalTablets
    section[id="socials"] ul
        margin 45px 20px 10px
        li
            margin 0 60px 35px
            a
                &[id="dribbble"]
                    margin 0 87px 0 0
                &[id="linkedin"]
                    margin 0 0 0 87px

@media bkSmallDesktopScreens
    [id="figure-holder"]
        padding 5px 0 30px
        figure
            width 200px
            height 200px
    section div
        min-height 150px
        width 600px
        margin 20px auto 30px
        padding 20px 0 20px 130px
        p
            padding 0
        &:before
            font normal 100px/1 Glyphs
    section[id="presentation"]
    section[id="invite"]
        div
            padding 20px 130px 20px 0
            &:before
                font normal 100px/1 Glyphs
                left auto
                right 20px
    section[id="socials"]
        ul
            margin 40px 10px 10px
            li
                margin 0 35px 35px
                a
                    &[id="dribbble"]
                        margin 0
                    &[id="linkedin"]
                        margin 0
    [id="behind"]
        display block
        position absolute
        top -152.5px
        right -152.5px
        width 300px
        height 300px
        border 5px solid white
        box-shadow 0 0 20px rgba( black, 0.75 ), inset 0 0 40px rgba( black, 1 )
        border-radius 300px
        background transparent url( "images/code.png" ) bottom left no-repeat
        z-index 1000
        text-decoration none
        span
            position absolute
            display inline-block
            width 220px
            top 270px
            right 250px
            color white
            text-transform uppercase
            font SemiBold 2em/1.15 FiraSans
            text-align right
            text-shadow 0 0 20px rgba( black, 0.75 )
            &:before
                content ""
                display block
                font normal 20px/1.5 Glyphs

@media bkMediumDesktopScreens
    section
        div
            width 800px
            margin 20px auto 50px
            padding 20px 130px
        &[id="presentation"]
        &[id="invite"]
            div
                padding 20px 130px
        &[id="introduction"]
            geometricBox( cIntroduction, 2deg, 1deg, 10, -25px, 80px )

        &[id="presentation"]
            geometricBox( cPresentation, -1deg, 3deg, 20, -25px, 80px )

        &[id="skills"]
            geometricBox( cSkills, 1deg, -2deg, 30, -25px, 80px )

        &[id="invite"]
            geometricBox( cInvite, -1deg, 1deg, 40, -25px, 80px )

        &[id="contact"]
            geometricBox( cContact, 3deg, -1deg, 40, -20px, 80px )
        &[id="socials"]
            ul
                margin 60px 10px 40px
    footer
        p
            width 800px
            margin 20px auto 18px

@media bkBigDesktopScreens
    section
        &[id="introduction"]
            geometricBox( cIntroduction, 2deg, 1deg, 10, -25px, 80px )

        &[id="presentation"]
            geometricBox( cPresentation, -1deg, 3deg, 20, -25px, 80px )

        &[id="skills"]
            geometricBox( cSkills, 1deg, -2deg, 30, -25px, 80px )

        &[id="invite"]
            geometricBox( cInvite, -1deg, 1deg, 40, -25px, 80px )

        &[id="contact"]
            geometricBox( cContact, 3deg, -1deg, 40, -30px, 110px )
